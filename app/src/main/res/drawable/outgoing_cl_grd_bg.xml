<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#07BBD9"
                android:endColor="#3AA9E4"
                android:angle="270"/>
        </shape>
    </item>

    <item android:right="20dp" android:top="12dp" android:bottom="12dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/white"
                android:centerColor="@color/white"
                android:endColor="#E7F1FD"
                android:angle="90"/>
        </shape>
    </item>

</layer-list>